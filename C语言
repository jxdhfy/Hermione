 	printf("%d\n",strlen(arr2));
	return 0;
}


#include<stdio.h>
int main()
{ int line=0;
  while(line<=20000)
  {
	printf("%d\n",line);
 	line++;
  }
  if(line>20000)
  printf("good offer\n");
  return 0;
}


#include<stdio.h>
int main()
{
	printf("%c,\n",'\'');
 	printf("%c\n",'\\');
 	printf("%c\n",'\"');
 	printf("%c\n",'\x61');
 	printf("%d\n",strlen("c:\test\32\test.c"));
 	printf("%d\n",strlen("c:\test\x61\32\\"));
	return 0;
}


