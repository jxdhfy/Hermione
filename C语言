#include<stdio.h>
#define PI 3.14159
main()
{  double r,c,area;
   printf("input radius:");
   scanf("%lf",&r);
   c=2*PI*r;
   area=PI*r*r;
   printf("%f,%f",c,area);
   getch(); 
}


#include<stdio.h>
main()
{ int a,b,c;
  printf("please input 2 integers:");
  scanf("%d%d",&a,&b);
  c=a*b;
  printf("%d*%d=%d",a,b,c);
  getch();
}


#include<stdio.h>
int main()
{
	int i;
	for(i=1;i<=10;i++)
	if(i%2==0)
		printf("偶数\n",i); 
	else if(i%2!=0)
		printf("奇数\n",i);	
	return 0;
}

#include<stdio.h>
int main()
{ char cl,cu;
  printf("please input a lowercase letter:");
  scanf("%c",&cl);
  cu=cl-32;
  printf("%c\t%c",cl,cu);
  getch();  
}


#include<stdio.h>
main()
{
	int x,y,z;
	for(x=0;x<=10;x++)
	    for(y=0;y<=5;y++)
	        for(z=0;z<=2;z++)
	            if(10*x+20*y+50*z==100)
	            printf("%d*10+%d820+%d*50=100\n",x,y,z);
	            getchar();
 } 


#include<stdio.h>
int main()
{
	int a=0;
	int b=2;
	if(a==1)
	    if(b==2)
		printf("hehe\n");
	    else
		printf("haha\n");
}


#include<stdio.h>
int main()
{
	int i=1;
	for(i=1;i<=100;i++)
	{
		if(i%2!=0)
			printf("%d ",i);
	}
	return 0;
}


#include<stdio.h>
int main()
{
	int day;
	for(day=1;day<=7;day++)
		switch(day)
		{
			case 1:printf("monday\n",day);
			case 2:printf("tuesday\n",day);
			case 3:printf("wednesday\n",day);
			case 4:printf("thusday\n",day);
			case 5:printf("friday\n",day);
			case 6:printf("saturday\n",day);
			case 7:printf("sunday\n",day);
		}
	return 0;
}


#include<stdio.h>
int main()
{
	int imput=0;
 	printf("你要好好学习吗?(1/0)>:");
 	scanf("%d",&imput);
 	if(imput==1)
 		printf("good offer\n");
 	else
 		printf("working\n");
	return 0;
}


#include<stdio.h>
int main()
{
	char arr1[]="abc";
 	char arr2[]={'a','b','c',};
 	printf("%d\n",strlen(arr1));
 	printf("%d\n",strlen(arr2));
	return 0;
}


#include<stdio.h>
int main()
{ int line=0;
  while(line<=20000)
  {
	printf("%d\n",line);
 	line++;
  }
  if(line>20000)
  printf("good offer\n");
  return 0;
}


#include<stdio.h>
int main()
{
	printf("%c,\n",'\'');
 	printf("%c\n",'\\');
 	printf("%c\n",'\"');
 	printf("%c\n",'\x61');
 	printf("%d\n",strlen("c:\test\32\test.c"));
 	printf("%d\n",strlen("c:\test\x61\32\\"));
	return 0;
}
