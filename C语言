#include<stdio.h>
#define PI 3.14159
main()
{  double r,c,area;
   printf("input radius:");
   scanf("%lf",&r);
   c=2*PI*r;
   area=PI*r*r;
   printf("%f,%f",c,area);
   getch(); 
}


#include<stdio.h>
main()
{ int a,b,c;
  printf("please input 2 integers:");
  scanf("%d%d",&a,&b);
  c=a*b;
  printf("%d*%d=%d",a,b,c);
  getch();
}

