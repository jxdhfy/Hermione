#include<stdio.h>
#define MF(x,y) x*y
int main()
{ int r;
  r=MF(2+3,4);	
  printf("%d",r);
  return 0;
}


#include<stdio.h>
int main()
{
	double x,y,max,min;
	scanf("%lf%lf",&x,&y);
	if(x<y)
		max=y,min=x;
	else
		max=x,min=y;
	printf("max=%f\n",max);
	printf("min=%f\n",min);
	return 0;
}


#include<stdio.h>
int main()
{ int year,leap;
  printf("Please input year: ");
  scanf("%d",&year);
  leap=(year%4==0 && year%100!=0)||(year%400==0);
  if(leap)
  	printf("%d is a leap year.\n",year);
  else
  	printf("%d is not a leap year.\n",year);
  return 0;
}


#include<stdio.h>
int main()
{ int i=1,sum=0;
  while(i<=100)
  {  sum=sum+i;
     i++;
  }
  printf("sum=%d\n",sum);
  return 0;
}


