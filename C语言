#include<stdio.h>
#define PI 3.14159
main()
{  double r,c,area;
   printf("input radius:");
   scanf("%lf",&r);
   c=2*PI*r;
   area=PI*r*r;
   printf("%f,%f",c,area);
   getch(); 
}


#include<stdio.h>
main()
{ int a,b,c;
  printf("please input 2 integers:");
  scanf("%d%d",&a,&b);
  c=a*b;
  printf("%d*%d=%d",a,b,c);
  getch();
}


#include<stdio.h>
int main()
{
	int i;
	for(i=1;i<=10;i++)
	if(i%2==0)
		printf("偶数\n",i); 
	else if(i%2!=0)
		printf("奇数\n",i);	
	return 0;
}

#include<stdio.h>
int main()
{ char cl,cu;
  printf("please input a lowercase letter:");
  scanf("%c",&cl);
  cu=cl-32;
  printf("%c\t%c",cl,cu);
  getch();  
}


#include<stdio.h>
main()
{
	int x,y,z;
	for(x=0;x<=10;x++)
	    for(y=0;y<=5;y++)
	        for(z=0;z<=2;z++)
	            if(10*x+20*y+50*z==100)
	            printf("%d*10+%d820+%d*50=100\n",x,y,z);
	            getchar();
 } 


#include<stdio.h>
int main()
{
	int a=0;
	int b=2;
	if(a==1)
	    if(b==2)
		printf("hehe\n");
	    else
		printf("haha\n");
}


#include<stdio.h>
int main()
{
	int i=1;
	for(i=1;i<=100;i++)
	{
		if(i%2!=0)
			printf("%d ",i);
	}
	return 0;
}
